{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "misuzu-lyrics",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../static"
  },
  "app": {
    "windows": [
      {
        "title": "Misuzu Lyrics",
        "label": "main",
        "width": 560,
        "height": 320,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": true,
        "shadow": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
